{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<form method="post" class="form-connexion">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
    {% endif %}

    <div class="form">
        <h1 class="title">Connexion </h1>
        <div class="email_div">
            <label class="email" for="inputEmail">Email</label>
            <input class="inputEmail" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>
        <div class="password_div">
            <label class="password" for="inputPassword">Password</label>
            <input class="inputPassword" type="password" name="password" id="inputPassword" class="form-control" required> 
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="button" type="submit">
            Envoyer
        </button>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    </div>
</form>
{% endblock %}
